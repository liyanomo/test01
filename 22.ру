2.2
x1 = int(input('введите номер столбца для первой клетки: '))
x2 = int(input('введите номер строки для первой клетки: '))
x3 = int(input('введите номер столбца для второй клетки: '))
x4 = int(input('введите номер строки для второй клетки: '))

if (0<x1<9) and (0<x2<9) and (0<x3<9) and (0<x4<9):
    if x1==x3: 
        print ('YES');
    else :
        if x2==x4:
            print ('YES');
        else:
            print ('NO');
else :
    print ('ERROR');